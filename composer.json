{
  "name": "vadim-nilov/ivy-sdk-php",
  "description": "IVY payment provider PHP Library",
  "keywords": [
    "ivy",
    "payment processing",
    "api"
  ],
  "homepage": "https://www.getivy.io/",
  "license": "MIT",
  "authors": [
    {
      "name": "Vadim Nilov",
      "homepage": "https://github.com/vadim-nilov"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-decimal": "*",
    "guzzlehttp/guzzle": "^7.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.9",
    "pestphp/pest": "^v1.22"
  },
  "autoload": {
    "psr-4": {
      "Ivy\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Ivy\\": [
        "tests/",
        "tests/Ivy/"
      ]
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
